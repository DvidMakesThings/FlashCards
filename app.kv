<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'img/background916.png'
                pos: self.pos
                size: self.size
        Button:
            text: "Start Studying"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1  # Soft blue button
            color: 1, 1, 1, 1  # White text for contrast
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'category'  # Correct transition to CategoryScreen
        Button:
            text: "Add New Flashcard"
            font_size: '20sp'
            background_color: 0.50, 0.80, 0.20, 1  # Soft green button
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'add_card'

<CategoryScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'img/background_game.png'
                pos: self.pos
                size: self.size
        ScrollView:
            GridLayout:
                id: category_list
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: '40dp'
                row_force_default: True
                spacing: '5dp'
        Button:
            text: "Back"
            font_size: '20sp'
            background_color: 0.50, 0.80, 0.20, 1  # Soft green button
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'home'

<StudyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'img/background_game.png'
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            spacing: '10dp'
            size_hint_y: 0.6
            canvas.before:
                Color:
                    rgba: 0.8, 0.9, 1, 1  # Light blue background for card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
            Label:
                id: question_label
                text: "Question goes here"
                font_size: '22sp'
                color: 0.1, 0.1, 0.4, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            spacing: '10dp'
            size_hint_y: None
            height: '100dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background for answer card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            TextInput:
                id: user_input
                hint_text: "Type your answer here"
                font_size: '18sp'
                background_color: 0, 0, 0, 0  # Transparent background
                foreground_color: 0.1, 0.1, 0.4, 1
                size_hint_y: None
                height: '50dp'
                multiline: False

        Button:
            text: "Check Answer"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: root.check_user_answer()
        Label:
            id: feedback_label
            text: ""
            font_size: '20sp'
            color: 0.50, 0.80, 0.20, 1  # Soft green button  # Feedback in soft orange
        Button:
            id: next_button
            text: "Next"
            font_size: '20sp'
            background_color: 0.50, 0.80, 0.20, 1  # Soft green button
            color: 1, 1, 1, 1
            opacity: 0
            size_hint_y: None
            height: '0dp'
            on_press: root.next_question()
        Button:
            id: practice_button
            text: "Practice All Cards"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            opacity: 0
            on_press: root.start_practice_mode()
        Button:
            text: "Back"
            font_size: '20sp'
            background_color: 0.50, 0.80, 0.20, 1  # Soft green button
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'category'

<AddCardScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'img/background_game.png'
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            spacing: '10dp'

            # Dropdown for Category
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: '120dp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for the card
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                AnchorLayout:
                    anchor_x: "center"
                    anchor_y: "center"
                    Spinner:
                        id: category_spinner
                        text: "Select or Add Category"
                        values: root.get_categories() + ["Add New Category"]  # Dynamic values
                        font_size: '18sp'
                        background_color: 0.2, 0.6, 0.9, 1  # Same soft blue as other buttons
                        background_normal: ""  # Removes default spinner background
                        color: 1, 1, 1, 1  # White text
                        size_hint: None, None
                        size: 300, 40
                        on_text: root.toggle_custom_category(self.text)

            # Custom Category Box (Always Stays Below Spinner)
            BoxLayout:
                id: custom_category_box
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: 0  # Initially hidden
                opacity: 0  # Initially hidden
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for the card
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                TextInput:
                    id: custom_category_input
                    hint_text: "Enter New Category"
                    font_size: '18sp'
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0.1, 0.1, 0.4, 1
                    size_hint_y: None
                    height: '50dp'
                    multiline: False

            # Input for Question
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: '120dp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for the card
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                TextInput:
                    id: question_input
                    hint_text: "Enter Question"
                    font_size: '18sp'
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0.1, 0.1, 0.4, 1
                    size_hint_y: None
                    height: '50dp'
                    multiline: False

            # Input for Answer
            BoxLayout:
                orientation: 'vertical'
                padding: '10dp'
                spacing: '10dp'
                size_hint_y: None
                height: '120dp'
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1  # White background for the card
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]
                TextInput:
                    id: answer_input
                    hint_text: "Enter Answer"
                    font_size: '18sp'
                    background_color: 0, 0, 0, 0  # Transparent background
                    foreground_color: 0.1, 0.1, 0.4, 1
                    size_hint_y: None
                    height: '50dp'
                    multiline: False

        # Feedback Label
        Label:
            id: feedback_label
            text: ""
            font_size: '16sp'
            color: 1, 1, 1, 1  # Default color
            size_hint_y: None
            height: '40dp'
            halign: 'center'
            valign: 'middle'
            text_size: self.size
        # Save Card Button
        Button:
            text: "Save Card"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: root.save_card()

        # Back Button
        Button:
            text: "Back"
            font_size: '20sp'
            background_color: 0.50, 0.80, 0.20, 1  # Soft green button
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'home'
