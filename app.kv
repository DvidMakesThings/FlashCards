<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '10dp'
        spacing: '10dp'
        canvas.before:
            Rectangle:
                source: 'img/background916.png'
                pos: self.pos
                size: self.size
        Button:
            text: "Start Studying"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1  # Soft blue button
            color: 1, 1, 1, 1  # White text for contrast
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'study'
        Button:
            text: "Add New Flashcard"
            font_size: '20sp'
            background_color: 0.9, 0.7, 0.0, 1  # Soft orange button
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'add_card'

<StudyScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: '20dp'
        spacing: '10dp'
        canvas.before:
            Color:
                rgba: 0.95, 0.95, 1, 1  # Light blue background
            Rectangle:
                source: 'img/background_game.png'
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            spacing: '10dp'
            size_hint_y: 0.6
            canvas.before:
                Color:
                    rgba: 0.8, 0.9, 1, 1  # Light blue background for card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
                Color:
                    rgba: 0.1, 0.1, 0.4, 1  # Dark blue frame
                Line:
                    width: 2
                    rounded_rectangle: (self.x, self.y, self.width, self.height, 20)
                PushMatrix
                Translate:
                    y: -5
                PopMatrix
            Label:
                id: question_label
                text: "Question goes here"
                font_size: '22sp'
                color: 0.1, 0.1, 0.4, 1
                halign: 'center'
                valign: 'middle'
                text_size: self.size

        BoxLayout:
            orientation: 'vertical'
            padding: '15dp'
            spacing: '10dp'
            size_hint_y: None
            height: '100dp'
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1  # White background for answer card
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [20]
            TextInput:
                id: user_input
                hint_text: "Type your answer here"
                font_size: '18sp'
                background_color: 0, 0, 0, 0  # Transparent background to blend with card
                foreground_color: 0.1, 0.1, 0.4, 1
                size_hint_y: None
                height: '50dp'
                multiline: False

        Button:
            text: "Check Answer"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            pos_hint: {'y': 0.05}
            on_press: root.check_user_answer()
        Label:
            id: feedback_label
            text: ""
            font_size: '20sp'
            color: 0.9, 0.7, 0.0, 1  # Feedback in soft orange
        Button:
            id: next_button
            text: "Next"
            font_size: '20sp'
            background_color: 0.9, 0.7, 0.0, 1
            color: 1, 1, 1, 1
            opacity: 0
            size_hint_y: None
            height: '0dp'
            on_press: root.next_question()
        Button:
            id: practice_button
            text: "Practice All Cards"
            font_size: '20sp'
            background_color: 0.2, 0.6, 0.9, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            opacity: 0
            on_press: root.start_practice_mode()
        Button:
            text: "Back"
            font_size: '20sp'
            background_color: 0.9, 0.7, 0.0, 1
            color: 1, 1, 1, 1
            size_hint_y: None
            height: '60dp'
            on_press: app.root.current = 'home'

